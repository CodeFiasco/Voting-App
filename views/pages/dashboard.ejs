<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../partials/head %>
    </head>
    <body>
        <header>
            <% include ../partials/header %>
        </header>
        <div class="container">
        <main>
            <% if (polls.length > 0) { %>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4 well">
                        <h2>Your Polls:</h2>
                        <ul class="list-group">
                            <% for (var i=0; i < polls.length; i++) { %>
                                <li class="list-group-item">
                                    <a class="list-link"href="/poll/<%= polls[i].id %>">
                                        <%= polls[i].question %>
                                    </a>
                                </li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            <% }else{ %>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4 well">
                        <h2>You have no active polls!</h2>
                        <a href="/new" class="btn btn-primary text-white center-block">Create Poll</a>
                    </div>
                </div>
            <% } %>
        </main>
    </div>
        <footer>
            <% include ../partials/footer %>
        </footer>
    </body>
</html>